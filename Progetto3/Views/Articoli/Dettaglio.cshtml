@model Progetto3.Models.Articolo

@{
    ViewData["Title"] = Model.Nome;
}

<h1>@Model.Nome</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.UrlImmagineCopertina" class="img-fluid mb-3" alt="@Model.Nome">
        <div class="row">
            <div class="col-6">
                <img src="@Model.UrlImmagineAggiuntiva1" class="img-fluid" alt="@Model.Nome - Immagine aggiuntiva 1">
            </div>
            <div class="col-6">
                <img src="@Model.UrlImmagineAggiuntiva2" class="img-fluid" alt="@Model.Nome - Immagine aggiuntiva 2">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Prezzo: @Model.Prezzo.ToString("C")</h2>
        <p>@Model.Descrizione</p>
        <a href="#" class="btn btn-success">Acquista ora</a>
    </div>
</div>